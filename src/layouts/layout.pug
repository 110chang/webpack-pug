-
  var options = htmlWebpackPlugin.options
  var depth = options.filename.split('/').length - 1
  var relRoot = ''

  if (depth === 0) {
    relRoot = './'
  } else {
    for (var i = 0; i < depth; i++) {
      relRoot += '../'
    }
  }
  htmlWebpackPlugin.props = htmlWebpackPlugin.props || {}
  htmlWebpackPlugin.props.relRoot = relRoot

//- Layout
html
  head
    title #{options.title} - My Site
    meta(name="description" content=options.meta.description)
    link(
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    )
    block styles
    script(src=relRoot + "lib/jquery-3.1.1.min.js")
  body
    include ../_header.pug
    block content
    block scripts
